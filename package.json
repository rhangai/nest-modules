{
  "packageManager": "yarn@4.1.1",
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8",
    "@nestjs/graphql": "^12.1.1",
    "@rhangai/eslint-config-typescript": "workspace:^",
    "@types/node": "^20",
    "eslint": "^9.1.1",
    "globals": "^15.1.0",
    "graphql": "^16.8.1",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.4.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare-release": "yarn build:all && changeset",
    "build:all": "yarn workspaces foreach -Ap run clean && yarn workspaces foreach -At run build",
    "lint": "(yarn lint:eslint || true) && yarn lint:prettier",
    "lint:eslint": "eslint --fix packages",
    "lint:prettier": "prettier --log-level error -w packages"
  }
}
